<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blade.manager.system.modules.permission.mapper.RoleMapper">
    <resultMap id="roleMap" type="com.blade.manager.system.modules.permission.entity.Role">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="data_scope" jdbcType="BIGINT" property="dataScope"/>
        <result column="level" jdbcType="INTEGER" property="level"/>
    </resultMap>

    <sql id="allColumn">
        id, name, create_time, remark, data_scope, level
    </sql>

    <select id="selectRolesByUserId" resultMap="roleMap" parameterType="long">
        SELECT r.* FROM users_roles ur LEFT JOIN role r
        ON ur.role_id = r.id
        WHERE ur.user_id = #{userId}
    </select>

</mapper>
