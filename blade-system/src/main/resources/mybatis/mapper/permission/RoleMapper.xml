<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blade.manager.system.modules.permission.mapper.RoleMapper">

    <!-- ===================================generated code============================================ -->
    <resultMap id="BaseResultMap" type="com.blade.manager.system.modules.permission.entity.Role">
        <result column="id" jdbcType="BIGINT" property="id" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="remark" jdbcType="VARCHAR" property="remark" />
        <result column="data_scope" jdbcType="VARCHAR" property="dataScope" />
        <result column="level" jdbcType="INTEGER" property="level" />
    </resultMap>

    <sql id="BaseColumn">
        id,
        create_time,
        name,
        remark,
        data_scope,
        level
    </sql>

    <select id="selectByPk" resultMap="BaseResultMap">
        SELECT <include refid="BaseColumn" /> FROM role
        WHERE id = #{id}
    </select>

    <delete id="deleteByPk">
        DELETE FROM role WHERE id = #{id}
    </delete>

    <insert id="insert" parameterType="com.blade.manager.system.modules.permission.entity.Role">
        INSERT INTO role
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="remark != null">
                remark,
            </if>
            <if test="dataScope != null">
                data_scope,
            </if>
            <if test="level != null">
                level,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="name != null">
                #{name},
            </if>
            <if test="remark != null">
                #{remark},
            </if>
            <if test="dataScope != null">
                #{dataScope},
            </if>
            <if test="level != null">
                #{level},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="com.blade.manager.system.modules.permission.entity.Role">
        UPDATE role
        <set>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="dataScope != null">
                data_scope = #{dataScope},
            </if>
            <if test="level != null">
                level = #{level},
            </if>
        </set>
        where id = #{id}
    </update>

    <!-- ===================================generated code============================================ -->

    <resultMap id="roleListVOMap" type="com.blade.manager.system.modules.permission.model.role.RoleListVO">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="data_scope" jdbcType="BIGINT" property="dataScope"/>
        <result column="level" jdbcType="INTEGER" property="level"/>
    </resultMap>

    <select id="selectRolesByUserId" resultMap="BaseResultMap" parameterType="long">
        SELECT r.* FROM users_roles ur LEFT JOIN role r
        ON ur.role_id = r.id
        WHERE ur.user_id = #{userId}
    </select>


    <select id="selectPage" resultMap="roleListVOMap" parameterType="com.blade.core.model.request.PageSearchDTO">
        SELECT <include refid="BaseColumn" />
        FROM role role
        <where>
            1 = 1
            <if test="searchDTO.name != '' and searchDTO.name != null">
                AND role.name = #{searchDTO.name}
            </if>
            <if test="searchDTO.enabled != null">
                AND role.enabled = #{searchDTO.enabled}
            </if>
        </where>
    </select>
</mapper>
