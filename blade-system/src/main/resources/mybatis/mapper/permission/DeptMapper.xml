<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blade.manager.system.modules.permission.mapper.DeptMapper">

    <resultMap id="deptMap" type="com.blade.manager.system.modules.permission.entity.Dept">
        <result column="id" jdbcType="BIGINT" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="pid" jdbcType="BIGINT" property="pid" />
        <result column="enabled" jdbcType="BIT" property="enabled" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    </resultMap>

    <resultMap id="deptTreeMap" type="com.blade.manager.system.modules.permission.model.dept.DeptTreeVO">
        <result column="id" jdbcType="BIGINT" property="id" />
        <result column="name" jdbcType="VARCHAR" property="label" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="pid" jdbcType="BIGINT" property="pid" />
        <result column="enabled" jdbcType="BIT" property="enabled" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    </resultMap>

    <select id="selectDeptByPid" parameterType="long"
            resultMap="deptTreeMap">
        SELECT id, name, pid, enabled, create_time FROM dept WHERE enabled = TRUE AND pid = #{pid}
    </select>

    <select id="selectByRoleIds" resultMap="deptMap">
        SELECT d.* FROM dept d LEFT JOIN roles_depts rd ON rd.dept_id = d.id
        <where>
            rd.role_id IN
            <foreach collection="roleIds" item="roleId" open="(" close=")" separator=",">
                #{roleId}
            </foreach>
        </where>
    </select>
</mapper>
