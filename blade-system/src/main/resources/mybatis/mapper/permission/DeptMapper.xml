<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blade.manager.system.modules.permission.mapper.DeptMapper">

    <!-- ===================================generated code============================================ -->
    <resultMap id="BaseResultMap" type="com.blade.manager.system.modules.permission.entity.Dept">
        <result column="id" jdbcType="BIGINT" property="id" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="pid" jdbcType="BIGINT" property="pid" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
        <result column="enabled" jdbcType="BIT" property="enabled" />
    </resultMap>

    <sql id="BaseColumn">
        id,
        name,
        pid,
        create_time,
        enabled
    </sql>

    <select id="selectByPk" resultMap="BaseResultMap">
        SELECT <include refid="BaseColumn" /> FROM dept
        WHERE id = #{id}
    </select>

    <delete id="deleteByPk">
        DELETE FROM dept WHERE id = #{id}
    </delete>

    <insert id="insert" parameterType="com.blade.manager.system.modules.permission.entity.Dept">
        INSERT INTO dept
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="pid != null">
                pid,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="enabled != null">
                enabled,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="name != null">
                #{name},
            </if>
            <if test="pid != null">
                #{pid},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="enabled != null">
                #{enabled},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="com.blade.manager.system.modules.permission.entity.Dept">
        UPDATE dept
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="pid != null">
                pid = #{pid},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="enabled != null">
                enabled = #{enabled},
            </if>
        </set>
        where id = #{id}
    </update>

    <!-- ===================================generated code============================================ -->

    <resultMap id="deptTreeMap" type="com.blade.manager.system.modules.permission.model.dept.DeptTreeVO">
        <result column="id" jdbcType="BIGINT" property="id" />
        <result column="name" jdbcType="VARCHAR" property="label" />
        <result column="name" jdbcType="VARCHAR" property="name" />
        <result column="pid" jdbcType="BIGINT" property="pid" />
        <result column="enabled" jdbcType="BIT" property="enabled" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    </resultMap>

    <select id="selectDeptByPid" parameterType="long"
            resultMap="deptTreeMap">
        SELECT id, name, pid, enabled, create_time FROM dept WHERE enabled = TRUE AND pid = #{pid}
    </select>

    <select id="selectByRoleIds" resultMap="BaseResultMap">
        SELECT d.* FROM dept d LEFT JOIN roles_depts rd ON rd.dept_id = d.id
        <where>
            rd.role_id IN
            <foreach collection="roleIds" item="roleId" open="(" close=")" separator=",">
                #{roleId}
            </foreach>
        </where>
    </select>
</mapper>
